<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.younsw.InventoryManager.user.dao.UserDAO"> 
	
	<insert id="signupInsert" parameterType="map">
	
		INSERT INTO
			`user`
		(
			`loginId`
			, `password`
			, `name`
			, `email`
		)
		VALUE
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{email}
		)
		
	</insert>
	
	<select id="selectCountLoginId" parameterType="string" resultType="int">
 		SELECT
 			count(1)
		FROM 
			`user`
		WHERE
			`loginId` = #{loginId}
 	</select>
 	
 	<select id="signin" parameterType="map" resultType="com.younsw.InventoryManager.user.model.User">
 		
 		SELECT 
 			`id`
 			, `loginId`
 			, `password`
 			, `name`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`user`
 		WHERE 
 			`loginId` = #{loginId}
 			AND `password` = #{password}
 		
 	</select>
 	
 	<select id="seleteUserById" parameterType="int" resultType="com.younsw.InventoryManager.user.model.User">
 		
 		SELECT 
 			`id`
 			, `loginId`
 			, `password`
 			, `name`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`user`
 		WHERE 
 			`id` = #{userId}
 		
 	</select>

</mapper>